function playergrave
integer l
object p

if_not_exists current
	return
endif

if deathcount > 0
	# Are we close enough to read it?
	if_exists lookobj
		get_line_of_sight l = lookobj current
		if l > 3
			return
		endif
	endif

	# Find the hero
	for l = 1 to MAX_MEMBERS
		let p = party[l]
		if_flag p IS_HERO
			break
		endif
	next l

	if_exists p
		print "It reads '"
		print p.personalname
		print "'"
		printcr
	endif
endif
end

