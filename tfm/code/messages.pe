function Door_sign
integer l
if_exists current

	# Are we close enough to read it?
	if_exists lookobj
		get_line_of_sight l = lookobj current
		if l > 3
			return
		endif
	endif

	print "It reads '"
	print current.personalname
	print "'"
	printcr
endif
end

