# Close base doors, portculli etc.

function trap_closedoors
object owner

let owner = current.stats.owner
if_exists owner
	# Reset the egg lockout to 0
	let current.user.counter = 0

	# Is it pressed?
	if owner.curdir = UP
	or owner.curdir = DOWN
		let current = owner
		call current.funcs.ucache
	endif
endif

end

