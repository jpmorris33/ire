function UsePortculli

if current.curdir = UP
	set_direction current = LEFT
	object_sound "portcullis_clunk" current
	call OpenPortculli
else
	set_direction current = UP
	object_sound "portcullis_clunk" current
	call ClosePortculli
endif

end



