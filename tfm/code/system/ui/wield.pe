##
##	Wield boots or shoes
##

function wield_boots

# If it's already wielded, abort

if_flag current IS_WIELDED
	return
endif

if_not_exist me.wield.feet
	let me.wield.feet = current
	set_flag current IS_WIELDED = 1
	return
endif

if me = player
	print "Nowhere to put!"
	printcr
endif

end


