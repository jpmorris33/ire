# Now the diagonals

if key = KEY_HOME
	add bx - CARSPEED
	add by - CARSPEED
	set_direction player to LEFT
	move_object player to bx by
	let key = 0
endif

if key = KEY_END
	add bx - CARSPEED
	add by + CARSPEED
	set_direction player to LEFT
	move_object player to bx by
	let key = 0
endif

if key = KEY_PGUP
	add bx + CARSPEED
	add by - CARSPEED
	set_direction player to RIGHT
	move_object player to bx by
	let key = 0
endif

if key = KEY_PGDN
	add bx + CARSPEED
	add by + CARSPEED
	set_direction player to RIGHT
	move_object player to bx by
	let key = 0
endif

call input

# Object selector

if key = KEY_TAB
	flush_keys
	let current_bag = player
	call browse_pockets
	let key = 0
endif

end


