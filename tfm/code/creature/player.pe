function check_playerisfirst
object test
object hero
integer ctr

let test = party[1]
if_flag test IS_HERO
	# Fine
	return
endif

# Okay, the player is NOT first in line.  Sort this out.

for ctr = 1 to MAX_MEMBERS
	let hero = party[ctr]
	if_flag hero IS_HERO
		# Found him
		let party[1] = hero
		let party[ctr] = test
		# Force him to be the leader
		set_leader hero player_action follower_action
		return
	endif
next count

end


function drop_where
object target

if_visible new_x new_y

	get_object target at new_x new_y
	if_exists target
		print "on "
		print_bestname target
		printcr
		return
	endif

	# No object, work out relative direction

	if new_y < player.y
		if new_x < player.x
			print "Northwest"
		endif
		if new_x = player.x
			print "North"
		endif
		if new_x > player.x
			print "Northeast"
		endif
	endif

	if new_y = player.y
		if new_x < player.x
			print "West"
		endif
		if new_x = player.x
			print "nowhere"
		endif
		if new_x > player.x
			print "East"
		endif
	endif

	if new_y > player.y
		if new_x < player.x
			print "Southwest"
		endif
		if new_x = player.x
			print "South"
		endif
		if new_x > player.x
			print "Southeast"
		endif
	endif
	printcr
else
	print "into darkness"
	printcr
endif

end
